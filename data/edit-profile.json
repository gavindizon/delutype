[
    {
        "title": "Personal Information",
        "fields": [
            {
                "name": "username",
                "label": "username",
                "required": true,
                "type": "text",
                "placeholder": "janeDC",
                "validation": {
                    "max": 15,
                    "min": 5,
                    "unique": true
                }
            },
            {
                "name": "email",
                "label": "email",
                "required": true,
                "type": "email",
                "placeholder": "janedelacruz@typhe.io",
                "validation": {
                    "email": true,
                    "unique": true
                }
            },
            {
                "name": "ageRange",
                "label": "age-range",
                "type": "radio",
                "options": ["13-19", "20-29", "30+"]
            }
        ]
    },
    {
        "title": "Password",
        "fields": [
            {
                "name": "oldPassword",
                "label": "old-password",
                "required": true,
                "type": "password",
                "placeholder": "••••••••"
            },
            {
                "name": "newPassword",
                "label": "new-password",
                "required": true,
                "type": "password",
                "placeholder": "••••••••",
                "validation": {
                    "min": 8,
                    "max": 20
                }
            },
            {
                "name": "confirmNewPassword",
                "label": "confirm-new-password",
                "required": true,
                "type": "password",
                "placeholder": "••••••••",
                "validation": {
                    "matchesWith": "password"
                }
            }
        ]
    },
    {
        "title": "Scheduling",
        "fields": [
            {
                "name": "datesAvailable",
                "label": "dates-available",
                "required": true,
                "type": "checkbox",
                "validation": {
                    "min": 1
                },
                "options": [
                    {
                        "name": "1stweekNov",
                        "label": "1st week of November 2022"
                    },
                    {
                        "name": "2ndweekNov",
                        "label": "2nd week of November 2022"
                    },
                    {
                        "name": "3rdweekNov",
                        "label": "3rd week of November 2022"
                    },
                    {
                        "name": "4thweekNov",
                        "label": "4th week of November 2022"
                    }
                ]
            },
            {
                "name": "isEligibleInDLSU",
                "label": "is-eligible-in-dlsu",
                "type": "radio",
                "options": ["Yes", "No"]
            }
        ]
    },
    {
        "title": "",
        "fields": [
            {
                "name": "privacyPolicy",
                "label": "",
                "required": true,
                "type": "checkbox",
                "validation": {
                    "min": 1
                },
                "insertAsHTML": true,
                "options": [
                    {
                        "name": "privacy-policy",
                        "label": "By registering an account, you are giving consent to typhe and agreeing to their <a class='text-blue-500 underline' target='_blank' href='/privacy-policy'>Privacy Policy</a>, and in compliance with the Data Privacy Act of 2012 (RA10173) and its Implementing Rules and Regulations (IPR) effective since September 9, 2016, I am authorizing these student researchers to: <ul class='list-decimal list-inside'> <li> Use my personal data, which includes my name, and age range , gathered for their undergraduate thesis. </li>   <li>Store my personal data for the analysis of results and the accomplishment of their undergraduate thesis.</li> </ul> By submitting, you are agreeing with the terms above. Rest assured your data will be used only for the reasons listed above and only by the entities stated in this terms."
                    }
                ]
            }
        ]
    }
]
