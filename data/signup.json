[
    {
        "title": "Personal Information",
        "fields": [
            {
                "name": "username",
                "label": "Username",
                "required": true,
                "type": "text",
                "placeholder": "janeDC",
                "validation": {
                    "max": 15,
                    "min": 5,
                    "unique": true
                }
            },
            {
                "name": "email",
                "label": "Email",
                "required": true,
                "type": "email",
                "placeholder": "janedelacruz@typhe.io",
                "validation": {
                    "email": true,
                    "unique": true
                }
            },
            {
                "name": "firstName",
                "label": "First Name",
                "required": true,
                "type": "text",
                "placeholder": "Jane"
            },
            {
                "name": "lastName",
                "label": "Last Name",
                "required": true,
                "type": "text",
                "placeholder": "Dela Cruz"
            },
            {
                "name": "sex",
                "label": "Sex",
                "required": false,
                "type": "select",
                "options": ["Prefer not to say", "Female", "Male"]
            },
            {
                "name": "birthDate",
                "label": "Birth Date",
                "required": false,
                "type": "date"
            }
        ]
    },
    {
        "title": "Password",
        "fields": [
            {
                "name": "password",
                "label": "Password",
                "required": true,
                "type": "password",
                "placeholder": "*********",
                "validation": {
                    "min": 8,
                    "max": 20
                }
            },
            {
                "name": "confirmPassword",
                "label": "Confirm Password",
                "required": true,
                "type": "password",
                "placeholder": "*********",
                "validation": {
                    "matchesWith": "password"
                }
            }
        ]
    },
    {
        "title": "Scheduling",
        "fields": [
            {
                "name": "datesAvailable",
                "label": "What week(s) is/are you most likely available?",
                "required": true,
                "type": "checkbox",
                "validation": {
                    "min": 1
                },
                "options": [
                    {
                        "name": "1stweekNov",
                        "label": "1st week of November 2022"
                    },
                    {
                        "name": "2ndweekNov",
                        "label": "2nd week of November 2022"
                    },
                    {
                        "name": "3rdweekNov",
                        "label": "3rd week of November 2022"
                    },
                    {
                        "name": "4thweekNov",
                        "label": "4th week of November 2022"
                    }
                ]
            },
            {
                "name": "isEligibleInDLSU",
                "label": "Are you an alumni, student, or faculty at De La Salle University - Manila?",
                "type": "radio",
                "options": ["Yes", "No"]
            }
        ]
    },
    {
        "title": "",
        "fields": [
            {
                "name": "datesAvailable",
                "label": "",
                "required": true,
                "type": "checkbox",
                "validation": {
                    "min": 1
                },
                "insertAsHTML": true,
                "options": [
                    {
                        "name": "privacyPolicy",
                        "label": "By registering an account, you are giving consent to typhe and agreeing to their <a class='text-blue-500 underline' target='_blank' href='/privacy-policy'>Privacy Policy</a>."
                    }
                ]
            }
        ]
    }
]
